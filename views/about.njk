{% extends "layout.njk" %}

{% block head %}

        <title>Sobre - {{about.name}}</title>

{% endblock %}

{% block content %} 

    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="{{about.name}}">

        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>

        <p>{{about.description}}</p>
    </div>

    <footer>
        <div class="icons">

            {% for link in about.link %}

            <a href="{{link.url}}" target="_blank">
                <img src="{{link.icon}}" />
            </a>

            {% endfor %}

        </div>
    </footer>
   
{% endblock %}    